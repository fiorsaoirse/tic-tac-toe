{
    "compileOnSave": false,
    "compilerOptions": {
      "baseUrl": "./src",
      "outDir": "./dist",
      "sourceMap": true,
      "module": "es2015",
      "moduleResolution": "node",
      "target": "es6",
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "es2018"
      ],
      "strict": true,
      "declaration": true,
      "emitDeclarationOnly": true,
      "isolatedModules": true
    },
    "include": [
      "src"
    ]
  }